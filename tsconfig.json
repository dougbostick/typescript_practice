{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["DOM","ES2015", "ES2016", "ES2018", "ES2019.Object", "ES2018.AsyncIterable", "ES2020.String", "ES2019.Array"],
        "outDir": "dist/",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "module": "CommonJS"
    },
    "exclude": ["node_modules"],
    "include": ["src/"]
}